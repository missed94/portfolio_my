script(type="text/x-template")#slider-container
    .reviews__slider
        .slider-header
            .slider__header-wrapper
                .reviews-title Что обо мне говорят
                .slider__buttons
                    button(type="button" @click="slide('prev')" :disabled="isBeginning" ).round-btn.round-btn--pointer--right
                        +icon('arrow-down', 'round-btn_arrow-prev-icon')  
                    button(type="button" @click="slide('next')" :disabled="isEnd").round-btn.round-btn--pointer--left
                        +icon('arrow-down', 'round-btn_arrow-next-icon')
        .slider__content-wrapper
            swiper(ref="slider" :options="sliderOptions")          
                swiper-slide(v-for="review in reviews", :key="review.id")
                    .quote
                        .quote__content  
                            .quote__text
                                p {{review.text}}
                            .quote__user
                                .user-display  
                                    .user-display__avatar
                                        .user-display__avatar-style
                                            img(:src="review.pic").user-display__pic
                                    .user-display__data
                                        .user-display__name {{review.name}}
                                        .user-display__occ {{review.occ}}

