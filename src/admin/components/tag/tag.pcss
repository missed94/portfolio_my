.tag {
  position: relative;
  white-space: nowrap;
  padding: 6px 20px;
  border-radius: 50px;
  background: #fff;
  color: rgba(40, 51, 64, 0.5);
  margin-right: 8px;
  margin-bottom: 8px;
  font-size: 13px;
}


.remove {
    position: absolute;
    display: block;
    right: 9%;
    top: 50%;
    transform: translate(0, -58.5%);
    background: transparent;
    font-weight: bold;
    font-size: 14px;
}