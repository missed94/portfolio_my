.about-section {
  padding-top: 170px;
}

.about__container {
  display: flex;
  justify-content: center;
}

.about__user-wrapper {
  display: flex;
  max-width: 1000px;

  @include tablets
   {
    flex-direction: column;
    align-items: center;
  }
}

.about__user {
  min-width: 286px;
  @include phones {
    width: 100%;
  }
  @include tablets {
    max-width: 286px;
    margin-bottom: 45px;
  }
}