
.user {
    display: flex;
    flex-direction: column;
    align-items: center;
    
  }
  
  .user__avatar {
    width: 200px;
    height: 200px;
    overflow: hidden;
    border-radius: 50%;
    margin-bottom: 70px;
    display: flex;
    justify-content: center;
    flex-shrink: 0;
  }
  
  .user-pic {
    display: block;
    max-width: 170%;
    max-height: 170%;
    transform: translateX(-8%);
  }