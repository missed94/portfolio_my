.values {
        position: relative;
        
        &:before {
            content:"";
            width: 28%;
            height: 1378px;
            position: absolute;
            background: url("~images/content/guitar.png") left center / contain no-repeat;
            left: 0;
            top:-67%; 
        }
}
.values__container {
    display: flex;
    flex-direction: column;
    align-items: center;

   
}
.values__title {
    
    width: 58%;
    margin-bottom: 70px;
    padding-top: 125px;

}
.values__title-text {
  font-weight: bold;
  font-size: 30px;
  line-height: 41px;
  color: #222427;
}
.values__content {
  p {
    font-weight: 600;
    font-size: 16px;
    line-height: 30px;
    color: rgba(16, 0, 34, 0.5);
  }
}

.values__widget {
    align-self: flex-end;
    margin-right: 25px;
}
