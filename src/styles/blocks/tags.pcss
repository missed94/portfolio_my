.tags {
    display: flex;
    margin-bottom: 25px;

    @include tablets {
      justify-content: center;
    }

    }
    .tags__item {
      margin-right: 8px;
    
      &:last-child {
        margin-right: 0;  
      }
    }
    .tag {
    padding: 14px 22px;
    background: #ECEFF2;
    border-radius: 40px;
    font-weight: 600;
    font-size: 15px;
    line-height: 1;
    color: rgba(51, 60, 73, 0.8);
    
    }         